@charset "utf-8";

#notice {
	width: 500px;
	height:	auto;
	position: absolute;
	left: 500px;
	font-family:fantasy;
	font-size: 11px;
	padding: 6px;
	margin: 8px auto;
	background: #eaeaea;
	text-align: center;
	border: #666 1px solid;

}
#notice code{
	width: 300px;
	height:	18px;
	left: 500px;
	font-family:monospace;
	font-size: 12px;
	padding: 6px;
	margin: 8px auto;
	background: #fff;
	text-align: center;
	border: #ccc 1px solid;
	
}
	
a:link {
	color: #67A;
	text-decoration: none;
}
a:visited {
	text-decoration: none;
	color: #67A;
}
a:hover {
	text-decoration: none;
	color: #67A;
}
a:active {
	text-decoration: none;
	color: #67A;
}
/* This is the main container everything is relative to this.*/

#shout_container {
	position: absolute;
	width: 258px;
	border-radius: 3px 3px;
	color: #151515;
	font-family: Verdana, Geneva, sans-serif;
	font-size: 11px;
	background: #F9F9F9;
	height: 373px;
	left: 625px;
	top: 155px;
	border: 1px #ccc solid;
	box-shadow: 1px 1px 1px rgba(0, 0, 0, .3);
	margin: 0px auto;
}
/* This is the container for the header sections */
#shout_header_container {
	width:258px;
	height: 28px;
	border-bottom: #ccc 1px solid;
}
#shout_header_top_heading {
	width: 160px;
	text-shadow: 0 1px 1px rgba(255, 255, 255, .2);
	text-align: left;
	padding: 3px;
	height: 14px;
	color: #ccc;
	float: left;
}
#shout_header_top_heading_left {
	float: left;
	text-align: center;
	width: 16px;
	height: 14px;
	margin: 0px;
	margin-top: 2px;
	background-repeat:no-repeat;
}
#shout_header_top_heading_online {
	float: left;
	text-align: center;
	width: 16px;
	height: 14px;
	margin: 0px;
	margin-top: 2px;
	background-repeat:no-repeat;
}
#shout_header_top_heading_messages {
	float: left;
	text-align: center;
	width: 16px;
	height: 14px;
	margin: 0px;
	margin-top: 2px;
	background-repeat:no-repeat;
}
#shout_header_top_heading_minimize{
	float: right;
	text-align: center;
	width: 16px;
	height: 16px;
	margin: 0px;
	margin-top: 2px;
	background-repeat:no-repeat;
	background-image:url(img/min.png);
}
#shout_header_entry_container {
	width: 250px;
	height: 40px;
	background: #EBF0F3;
	border-bottom: #ccc 1px solid;
	padding: 4px;
	text-align: center;
}
.shouttext {
	border-radius: 3px 3px;
	color: #151515;
	font-family: Verdana, Geneva, sans-serif;
	font-size: 11px;
	background: #F9F9F9;
	border: 1px #ccc solid;
	padding:2px;
}
.hidden {
	display: none;
}
.settingtext {
	border-radius: 3px 3px;
	color: #151515;
	font-family: Verdana, Geneva, sans-serif;
	font-size: 11px;
	background: #F9F9F9;
	border: 1px #ccc solid;
}
#shout_msg_container {
	height: 55px;
	width: 258px;
	border-bottom: #ccc 1px dotted;
}
#shout_avatar_container {
	height: 32px;
	width: 32px;
	background-image: url(img/shout.png);
	background-repeat:no-repeat;
	float: left;
	margin-left: 7px;
	margin-top: 8px;
}
#shout_user_container {
	height: 16px;
	width: 120px;
	padding-right: 4px;
	float: left;
	text-align: left;
	padding-top: 1px;
	padding-left: 3px;
}
#shout_stamp_container {
	float: right;
	height: 14px;
	width: 80px;
	padding-right: 4px;
	font-size: 10px;
	color: #ccc;
	text-align: right;
	padding-top: 2px;
}
#shout_message {
	float: left;
	text-align: left;
	width: 210px;
	height: 30px;
	border-radius: 3px 3px;
	background: #fff;
	border: #ccc 1px solid;
	margin-left: 2px;
	display: block;
	box-shadow: 1px 1px 1px rgba(0, 0, 0, .3);
	overflow: hidden;
}
#shout_message_text {
	padding: 2px;
	overflow: hidden;
}
#center_content_history {
	display: none;
}
#center_content_history li {
	width:250px;
	list-style:none;
	padding: 2px;
}
#center_content_settings {
	display: none;
}
#center_content_settings_container {
	height: 18px;
	width: 250px;
	border-bottom: #ccc 1px dotted;
	padding: 4px;
}
#center_content_settings_text_header {
	font-weight: 700;
	padding-top: 2px;
	padding-left: 2px;
}
#center_content_settings_text_left {
	height: 20px;
	font-weight: normal;
	width: 120px;
	float: left;
	padding-top: 2px;
	text-align: left;
}
#center_content_settings_text_right {
	height: 20px;
	font-weight: normal;
	width: 120px;
	float: right;
	text-align: right;
}
#center_content_settings_button {
	height: 14px;
	padding-lefT: 2px;
	padding-top: 2px;
	padding-bottom: 1px;
	margin-bottom: 1px;
	padding-right: 4px;
	background-color:#FFF;
	border: #ccc 1px solid;
	width: 50px;
	border-radius: 2px 2px;
	float: right;
	text-align: center;
}
#login_button {
	height: 14px;
	padding-lefT: 2px;
	padding-top: 2px;
	padding-right: 2px;
	padding-bottom: 1px;
	margin-bottom: 1px;
	padding-right: 4px;
	background-color:#FFF;
	border: #ccc 1px solid;
	width: 50px;
	border-radius: 2px 2px;
	text-align: center;
}
#login_button a:hover {
	background-color:#ccc;
	border-radius: 2px 2px;
	width: 100%;
	height: 100%;
}
#center_content_settings_button a:hover {
	background-color:#ccc;
	border-radius: 2px 2px;
	width: 100%;
	height: 100%;
}
#center_content_messages {
	overflow: hidden;
	heigh: 10px;
}
#center_content_loading {
		height: 67px;
		width: 67px;
		padding: 1px;
		background-image:url(img/loading_big.gif);
		background-repeat:no-repeat;
		background-position:center center;
		margin-top: 80px;
		display: none;	
		margin-left: 90px;
}
#center_content_settings_login {
	width: 258px;
	height: 128px;
}
#center_content_settings_login_header {
	height: 12px;
	padding: 1px;
	text-align: center;
}
#center_content_settings_login_empty {
	height: 12px;
	padding: 1px;
	text-align: center;
	text-shadow: 1px 1px #ccc;
}
#center_content_settings_login_entry_box {
	height: 20px;
	padding: 1px;
	text-align: center;
}
#shout_footer {
	height: 40px;
	background: #EBF0F3;
	width: 258px;
	bottom: 0px;
	position: absolute;
	border-top: #ccc 1px solid;
	padding-top: 4px;
}
#shout_footer_left {
	float: left;
	text-align: center;
	width: 82px;
	height: 32px;
	padding: 2px;
	margin-bottom: 1px;
	background-image:url(img/shouts.png);
	background-repeat:no-repeat;
	background-position:center center;
	opacity:0.5;
	filter:alpha(opacity=50);
}
#shout_footer_left:hover{
	opacity:1.0;
	filter:alpha(opacity=100);
}
#shout_footer_center {
	float: right;
	text-align: center;
	width: 82px;
	height: 32px;
	padding: 2px;
	margin-bottom: 1px;
	background-image:url(img/history.png);
	background-repeat:no-repeat;
	background-position:center center;
	opacity:0.5;
	filter:alpha(opacity=50);
}
#shout_footer_center:hover{
	opacity:1.0;
	filter:alpha(opacity=100);
}
#shout_footer_right {
	float: right;
	text-align: center;
	width: 82px;
	height: 32px;
	padding: 2px;
	margin-bottom: 1px;
	background-image:url(img/settings.png);
	background-repeat:no-repeat;
	background-position:center center;
	opacity:0.5;
	filter:alpha(opacity=50);
}
#shout_footer_right:hover{
	opacity:1.0;
	filter:alpha(opacity=100);
}
#loading {
	background-image:url(img/loading_sm.gif);
	background-repeat: no-repeat;
	width: 16px;
	height: 16px;
}
#lock {
	width: 16px;
	height: 16px;
}
#online {
	width: 16px;
	height: 16px;
}
#private {
	width: 16px;
	height: 16px;
}
